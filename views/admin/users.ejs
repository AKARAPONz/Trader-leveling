<!DOCTYPE html>
<html lang="en">
<head>
  <!-- ส่วนหัว: meta, title, css, font, style, js -->
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Manage Users · Admin</title>
  <link href="/css/minimal.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<style>
      :root {
        --primary-color: #0d6efd;
      }
</style>
<body>
  <!-- Sidebar: เมนูด้านข้างสำหรับ admin -->
  <div class="sidebar">
    <div class="sidebar-header">
      <a href="/" class="brand">
        <i class="bi bi-graph-up-arrow"></i>
        Trader Leveling
      </a>
    </div>
    <nav class="nav-menu">
      <div class="nav-item">
        <a href="/" class="nav-link">
          <i class="bi bi-house-door"></i>
          Home
        </a>
      </div>
      <div class="nav-item">
        <a href="/dashboard" class="nav-link">
          <i class="bi bi-grid-1x2"></i>
          Dashboard
        </a>
      </div>
      <div class="nav-item">
        <a href="/tournament" class="nav-link">
          <i class="bi bi-trophy"></i>
          Tournament
        </a>
      </div>
      <div class="nav-item">
        <a href="/trade" class="nav-link">
          <i class="bi bi-graph-up"></i>
          Trade
        </a>
      </div>
      <div class="nav-item">
        <a href="/profile" class="nav-link">
          <i class="bi bi-person"></i>
          Profile
        </a>
      </div>
      <% if (user.role === 'admin') { %>
        <div class="nav-item">
          <a href="/admin/users" class="nav-link active">
            <i class="bi bi-people"></i>
            Users
          </a>
        </div>
      <% } %>
    </nav>
    <div class="sidebar-footer">
      <div class="auth-buttons">
        <% if (loggedIn) { %>
          <a href="/logout" class="btn btn-primary">
            <i class="bi bi-box-arrow-right"></i>
            Logout
          </a>
        <% } else { %>
          <a href="/login" class="btn btn-primary">
            <i class="bi bi-box-arrow-in-right"></i>
            Sign In
          </a>
          <a href="/register" class="btn btn-primary">
            <i class="bi bi-person-plus"></i>
            Sign Up
          </a>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Main Content: เนื้อหาหลักของหน้า admin users -->
  <div class="main">
    <div class="topbar">
      <!-- ข้อมูลผู้ใช้ admin -->
      <div class="user-info">
        <div class="user-details">
          <h4>Admin - Users</h4>
            <small>
              Level: <span id="userLevel"><%= user.level || 'N/A' %></span> | 
              EXP: <span id="userExp"><%= user.exp || 0 %></span> | 
              Role: <span class="badge badge-<%= user.role === 'admin' ? 'danger' : user.role === 'trader' ? 'success' : 'secondary' %>"><%= user.role || 'Guest' %></span> | @<%= user.username || 'Guest' %> <br /> | 
              <%= new Date().toLocaleDateString('en-GB', { weekday: 'short', day: '2-digit', month: 'short', year: 'numeric' }) %>
            </small>
        </div>
      </div>
      <img src="<%= user.profileImage || '/default-avatar.png' %>?v=<%= Date.now() %>" class="avatar" alt="Profile" />
    </div>
    <div class="content">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">
          <i class="bi bi-people"></i> จัดการผู้ใช้งาน (Admin Panel)
        </h1>
      </div>
      <div class="card">
      <div class="card-body">
        <div class="table-responsive">

          <!-- ตารางแสดงข้อมูลผู้ใช้ทั้งหมด -->
          <table class="table">
            <thead>
              <tr>
                <th>Username</th>
                <th>Age</th>
                <th>Country</th>
                <th>Role</th>
                <th>Level</th>
                <th>EXP</th>
                <th>Actions</th>
              </tr>
            </thead>
            <% const sortedUsers = [...users].sort((a, b) => {
                if (a.role === 'admin' && b.role !== 'admin') return -1;
                if (a.role !== 'admin' && b.role === 'admin') return 1;
                return 0;
              }); %>
            <tbody>
              <% sortedUsers.forEach(user => { %>
                <tr>
                  <td><%= user.username %></td>
                  <td><%= user.age %></td>
                  <td><%= user.country %></td>
                  <td><%= user.role %></td>
                  <td><%= user.level %></td>
                  <td><%= user.exp || 0 %></td>
                  <td>
                    <!-- Form แก้ไข Role & Level -->
                    <form action="/admin/users/update" method="POST" class="d-flex gap-2 align-items-center mb-1">
                      <input type="hidden" name="userId" value="<%= user._id %>">
                      <% if (user._id.toString() === currentUserId.toString()) { %>
                        <select name="role" class="form-control form-control-sm" style="width: 110px;" disabled>
                          <option value="guest" <%= user.role === 'guest' ? 'selected' : '' %>>Guest</option>
                          <option value="trader" <%= user.role === 'trader' ? 'selected' : '' %>>Trader</option>
                          <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
                        </select>
                      <% } else { %>
                        <select name="role" class="form-control form-control-sm" style="width: 110px;">
                          <option value="guest" <%= user.role === 'guest' ? 'selected' : '' %>>Guest</option>
                          <option value="trader" <%= user.role === 'trader' ? 'selected' : '' %>>Trader</option>
                          <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
                        </select>
                      <% } %>
                      <input type="number" name="level" value="<%= user.level %>" min="1" class="form-control form-control-sm" style="width: 70px;" />
                      <button type="submit" class="btn btn-primary btn-sm">Save</button>
                    </form>
                    <!-- Form ลบผู้ใช้ -->
                    <% if (user._id.toString() !== currentUserId.toString()) { %>
                      <form action="/admin/users/delete" method="POST" style="display:inline;">
                        <input type="hidden" name="userId" value="<%= user._id %>">
                        <button type="submit" class="btn btn btn-sm">Delete</button>
                      </form>
                    <% } else { %>
                      <span class="text-muted">Can't delete yourself</span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  </div>
  <script src="/js/admin-users.js"></script>
  <script>
  document.addEventListener('DOMContentLoaded', function() {
    // Alert on Save
    document.querySelectorAll('form[action="/admin/users/update"]').forEach(form => {
      form.addEventListener('submit', function(e) {
        alert('Saved successfully!');
      });
    });
    // Alert on Delete
    document.querySelectorAll('form[action="/admin/users/delete"]').forEach(form => {
      form.addEventListener('submit', function(e) {
        if(confirm('Are you sure you want to delete this user?')) {
          alert('User deleted!');
        } else {
          e.preventDefault();
        }
      });
    });
  });
  </script>
  <script src="/js/toggleSidebar.js"></script>
</body>
</html>
