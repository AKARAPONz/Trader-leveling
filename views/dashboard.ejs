<script>
  async function checkTournamentExp() {
    const urlParams = new URLSearchParams(window.location.search);
    const tournamentId = urlParams.get('tournamentId');
    if (!tournamentId) return;

    try {
      const res = await fetch(`/api/tournament-exp-status?tournamentId=${tournamentId}`);
      const data = await res.json();
      
      if (data.success) {
        Swal.fire({
          icon: 'success',
          title: `üéØ ${data.username} ‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö +${data.expReward} EXP`,
          text: `‡∏à‡∏≤‡∏Å ${data.tournamentName} (‡∏≠‡∏±‡∏ô‡∏î‡∏±‡∏ö ${data.rank})`,
          confirmButtonText: '‡πÄ‡∏¢‡∏µ‡πà‡∏¢‡∏°‡πÄ‡∏•‡∏¢!',
          confirmButtonColor: '#0d6efd'
        });

      }
    } catch (err) {
      console.error('EXP Check failed:', err);
    }
  }

  document.addEventListener('DOMContentLoaded', checkTournamentExp);
</script>

